<p id="notice"><%= notice %></p>
<center>
<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <b><%= @post.title %></b>
</p>

<p>
  <b>Context:</b>
  <b><%= @post.context %></b>
</p>
<p>
  <b>Tags:</b>
  <%= join_tags(@post)%>
</p>
 

 
<h2>Comments</h2>
<%= render @post.comments %>
 
