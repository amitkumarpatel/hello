<center>
<%= form_for( @post , :html=>{:multipart=> true}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :NAME %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :position  %><br />
    <%= f.select(:position,1..5) %>
  </div>
  <div class="field">
    <%= f.label :upload  %><br />
    <%= f.file_field :upload %>
  </div>
  <div class="field">
    <%= f.label :context %><br />
    <%= f.text_area :context ,:size=>'40*10'%>
  </div>
    <div class="field">
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>
    <div class="field">
    <%= f.label :Content_type %><br />
    <%= f.radio_button :content,'html' %>HTML
    <%= f.radio_button :content,'java' %>Java
    <%= f.radio_button :content,'ruby' %>Ruby
    <%= f.radio_button :content,'text' %>Text
    <%= f.radio_button :content,'other' %>Other
  </div>
  <div class="field">
    <%= f.label :visible  %><br />
    <%= f.check_box (:visible) %>
  </div>
  <h2>tags</h2>
  <%= render :partial=>'tags/form',
  :locals=>{:form=> f}%>
    <div class="field">
    <%= f.label :Created  %><br />
    <%= f.datetime_select (:created_at) %>
  </div>
                               
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</center>